<?xml version="1.0" encoding="utf-8"?>


<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:showIn="@layout/activity_direction"
        tools:context="com.example.juasp_g73.recipeshelper.DirectionActivityFragment"
        android:columnCount="4"
>

    <!-- DIRECTION_IMAGE_URL  -->
    <ImageView
            android:id="@+id/direction_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/recipehelperlogo"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_gravity="right"/>

    <!-- DIRECTION_STEP  -->
    <TextView
            android:id="@+id/direction_step"
            android:text="STEP #"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
    />

    <!-- DIRECTION_DESCRIPTION  -->
    <TextView
            android:id="@+id/direction_description"
            android:text="Description"
            android:maxLines = "6"
            android:scrollbars = "vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
    />




    <!-- NEXT STEP BUTTON -->
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="5"
            android:layout_gravity="right"
            android:id="@+id/button_next"/>

    <!-- PREVIOUS STEP BUTTON -->
    <Button
            android:text="previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_gravity="right"
            android:id="@+id/button_previous"
            android:visibility="invisible"/>

    <!-- Ingredients and tools label  -->
    <TextView
            android:id="@+id/label_ingredients"
            android:text="For this step you will need:"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"/>

    <!-- Ingredients and tools label  -->
    <TextView
            android:id="@+id/label_information"
            android:text="(CLICK ON AN ITEM TO REVEAL IT)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_gravity="left"
            android:textSize="10sp"
            android:textColor="@android:color/holo_red_dark"/>

    <!-- Timer ImageView -->
    <ImageView
            android:id="@+id/iv_timer"
            android:layout_width="27dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_height="23dp"
            app:srcCompat="@drawable/clock"
            android:layout_gravity="left"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/tv_timer"
            android:layout_width="27dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_height="23dp"
            app:srcCompat="@drawable/clock"
            android:layout_gravity="left"/>

    <!-- DIRECTION_INGREDIENTS  -->
    <GridView
            android:id="@+id/direction_ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:numColumns="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:clickable="false"/>

    <!-- DIRECTION_TOOLS  -->
    <GridView
            android:id="@+id/direction_tools"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowSpan="3"
            android:numColumns="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"/>
    <ImageView
            android:id="@+id/iv_item_image_url"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_columnSpan="2"
            app:srcCompat="@drawable/phototbd"
            android:layout_gravity="fill"
            android:visibility="invisible"/>
</GridLayout>


