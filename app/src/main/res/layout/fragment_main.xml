<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.juasp_g73.recipeshelper.MainActivityFragment">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_nfc" app:srcCompat="@drawable/nfcblack300x300"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView
                android:text="You can scan the NFC recipe tag!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_nfc_ok"
                tools:textSize="20sp"
                android:layout_below="@+id/imageView_nfc" android:layout_centerHorizontal="true"
                tools:textColor="@android:color/background_light"
                android:background="@android:color/holo_green_light" android:padding="10dp"
                android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
